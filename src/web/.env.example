# Application Environment
# Required: true
# Values: development, staging, production
NODE_ENV=development

# API Base URL
# Required: true
# Format: Valid HTTPS URL with /api suffix for staging/production
# Development: http://localhost:3000/api
# Staging: https://staging-api.precheck.me/api
# Production: https://api.precheck.me/api
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# WebSocket Server URL
# Required: true
# Format: Valid WSS URL with /ws suffix for staging/production
# Development: ws://localhost:3000/ws
# Staging: wss://staging-api.precheck.me/ws
# Production: wss://api.precheck.me/ws
NEXT_PUBLIC_WS_URL=ws://localhost:3000/ws

# Application Name
# Required: true
# Format: Non-empty string
NEXT_PUBLIC_APP_NAME=Precheck.me

# Application Version
# Required: true
# Format: Semantic versioning (x.y.z)
NEXT_PUBLIC_VERSION=1.0.0

# Sentry DSN for Error Tracking
# Required: false
# Format: Valid Sentry DSN URL
# Example: https://xxxxx@xxxxx.ingest.sentry.io/xxxxx
NEXT_PUBLIC_SENTRY_DSN=

# Google Analytics Measurement ID
# Required: false
# Format: Valid GA4 measurement ID
# Example: G-XXXXXXXXXX
NEXT_PUBLIC_GA_ID=

# Stripe Publishable Key
# Required: true
# Format: Valid Stripe publishable key starting with pk_
# Development: pk_test_...
# Production: pk_live_...
NEXT_PUBLIC_STRIPE_PUBLIC_KEY=pk_test_

# Maximum File Size for Uploads
# Required: true
# Format: Number in bytes (default: 10MB = 10485760)
# Maximum allowed: 20MB = 20971520
NEXT_PUBLIC_MAX_FILE_SIZE=10485760

# Supported File Types for Document Upload
# Required: true
# Format: Comma-separated list of file extensions
# Default: PDF, JPG, JPEG, PNG
NEXT_PUBLIC_SUPPORTED_FILE_TYPES=.pdf,.jpg,.jpeg,.png